<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimaryDark"></stroke>
            <corners android:radius="2dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"></padding>
        </shape>

    </item>
</layer-list>