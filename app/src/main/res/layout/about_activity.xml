<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textViewFooter"
        android:layout_marginTop="@dimen/activity_large_margin"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayoutLogo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_large_margin"
            android:layout_marginBottom="@dimen/activity_large_margin"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="نسخه:"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/textViewVersion"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="1.0.1.1"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="تاریخ به روزرسانی:"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/textViewSize"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="1396/12/13"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:gravity="start"
                android:orientation="horizontal"
                android:textColor="?attr/colorAccent"
                android:weightSum="2">

                <TextView
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="آقای سعید شمسایی:"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/textViewPossibility"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="09357366741"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="طراحی شده توسط:"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/textViewDesign"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="تیم نرم افزاری آبفا"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:gravity="start"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="وب سایت:"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/textViewSite"
                    style="@style/text_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_margin"
                    android:layout_marginTop="@dimen/activity_medium_margin"
                    android:layout_marginRight="@dimen/activity_medium_margin"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="www.abfa.ir"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/textSizeSmall" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutLogo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/activity_large_margin"
            android:layout_weight="1"
            android:background="@drawable/img_logo"
            android:orientation="horizontal"
            app:srcCompat="@drawable/img_logo" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/gray3"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/company_site"
        android:textColor="@color/black1" />


</RelativeLayout>
