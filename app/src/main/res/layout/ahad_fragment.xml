<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    tools:context="com.app.leon.abfa.Fragments.AhadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/low_padding"
        android:background="@drawable/border_white_"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?attr/colorAccent" />

        <EditText
            android:id="@+id/editTextMaskooni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mid_margin"
            android:background="@drawable/border_"
            android:gravity="center"
            android:hint="تعداد آحاد اصلی"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:padding="@dimen/activity_medium_padding"
            android:textSize="@dimen/textSizeLarge_" />

        <EditText
            android:id="@+id/editTextNon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mid_margin"
            android:background="@drawable/border_"
            android:gravity="center"
            android:hint="تعداد آحاد غیراصلی"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:padding="@dimen/activity_medium_padding"
            android:textSize="@dimen/textSizeLarge_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonExit"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_red_"
                android:padding="@dimen/activity_mid_padding"
                android:text="بستن"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSubmit"
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/border_green_"
                android:padding="@dimen/activity_mid_padding"
                android:text="ثبت"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
