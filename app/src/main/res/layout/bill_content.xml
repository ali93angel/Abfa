<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.leon.abfa.Activities.BillActivity"
    tools:showIn="@layout/bill_app_bar">

    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/gray3"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/company_site"
        android:textColor="@color/black1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_large_margin"
        android:layout_marginRight="@dimen/activity_large_margin"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imageViewBill"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/img_temporary3" />


        <Button
            android:id="@+id/buttonBill"
            style="@style/text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:background="@drawable/border_orange_"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeLarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewCounter"
        style="@style/text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/activity_mid_margin"
        android:padding="@dimen/activity_mid_padding"
        android:text="0"
        android:textStyle="bold" />

</RelativeLayout>
