<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.leon.abfa.Fragments.ContactUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/colorPrimaryDark"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:gravity="center"
                android:text="پشتیبانی"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeLarge_" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:padding="@dimen/activity_mid_padding"
            android:textDirection="rtl">

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="آقای شمسایی"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeMedium" />

            <TextView
                style="@style/text_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="09357366741"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeMedium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:orientation="horizontal"
            android:padding="@dimen/activity_mid_padding"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonExit"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/img_back"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonCall"
                style="@style/text_bold"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_mid_margin"
                android:layout_weight="1"
                android:background="@drawable/img_call"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
