<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/take_photo_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!--<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="?attr/colorPrimary" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAccount"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="اشتراک"
                android:textColor="@color/black1"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayoutAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:background="@drawable/border_gray_"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_subscribe" />

                <EditText
                    android:id="@+id/editTextAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="10"
                    android:padding="@dimen/activity_mid_padding" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewPhone"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="شماره تلفن ثابت"
                android:textColor="@color/black1"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayoutPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:background="@drawable/border_gray_"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_phone" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="8"
                    android:padding="@dimen/activity_mid_padding" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewCell"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="شماره همراه"
                android:textColor="@color/black1"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayoutCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:background="@drawable/border_gray_"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_cellphone" />

                <EditText
                    android:id="@+id/editTextCell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:padding="@dimen/activity_mid_padding" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewCounter"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="15"
                android:text="شماره سریال کنتور"
                android:textColor="@color/black1"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayoutCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:background="@drawable/border_gray_"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_counter" />

                <EditText
                    android:id="@+id/editTextCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:padding="@dimen/activity_mid_padding" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewAddress"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="50"
                android:text="نشانی"
                android:textColor="@color/black1"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:background="@drawable/border_gray_"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_address" />

                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="@dimen/activity_mid_padding" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewHome"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="آحاد خالی از سکنه"
                android:textColor="@color/black1"
                android:textSize="@dimen/textSizeLarge_"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayoutHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:background="@drawable/border_gray_"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_home" />

                <EditText
                    android:id="@+id/editTextHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:padding="@dimen/activity_mid_padding" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonNavigation"
            style="@style/text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:background="@drawable/border_accent"
            android:text="پیمایش"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="@dimen/textSizeLarge_"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
