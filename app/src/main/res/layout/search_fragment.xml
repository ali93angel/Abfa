<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.leon.abfa.Fragments.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/low_padding"
        android:background="@drawable/border_white_"
        android:gravity="center"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:gravity="center"></Spinner>

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:background="@drawable/border_"
            android:gravity="center"
            android:hint="ورود اطلاعات"
            android:inputType="number"
            android:maxLines="1"
            android:padding="@dimen/activity_medium_padding"
            android:textSize="@dimen/textSizeLarge_" />

        <Button
            android:id="@+id/buttonSearch"
            style="@style/text_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:background="@drawable/border_blue_"
            android:text="جستجو"
            android:textSize="@dimen/textSizeLarge_"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
